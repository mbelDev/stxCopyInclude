<main class="main">
  <section class="main_title">
    <div class="main_title__visual Swiper">
      <!-- Additional required wrapper -->
      <div class="swiper-wrapper">
        <!-- Slides -->
        <div class="swiper-slide item1">Slide 1</div>
        <div class="swiper-slide item2">Slide 2</div>
        <div class="swiper-slide item3">Slide 3</div>
        <div class="swiper-slide item4">Slide 4</div>
      </div>
